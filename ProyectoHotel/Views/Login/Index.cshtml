
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bienvenido | Hotel Krystal</title>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="Portal - Bootstrap 5 Admin Dashboard Template For Developers">
    <meta name="author" content="Xiaoying Riley at 3rd Wave Media">
    <link rel="shortcut icon" href="favicon.ico">

    <!-- FontAwesome JS-->
    <script defer src="~/Scripts/fontawesome/js/fontawesome.min.js"></script>

    <!-- App CSS -->
    <link id="theme-style" rel="stylesheet" href="~/css/portal.css">

</head>

<body class="app app-login p-0">
    <div class="row g-0 app-auth-wrapper">
        <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5">
            <div class="d-flex flex-column align-content-end">
                <div class="app-auth-body mx-auto">
                    <br /><br /><br /><br /><br /><br /><br />
                    <div class="app-auth-branding mb-4"><a class="app-logo" href="#"><img class="logo-icon me-2" src="~/imagenes/app-logo.svg" alt="logo" width="180" height="100"></a></div>
                    <h2 class="auth-heading text-center mb-5">Bienvenido al Login</h2>
                    <h2 class="auth-heading text-center mb-5">Inicio Sesion</h2>
                    <div class="auth-form-container text-start">
                        <form class="user auth-form login-form" action="@Url.Action("Index","Login")" method="post">
                            <div class="email mb-3">
                                <label class="sr-only" for="signin-email">Email</label>
                                <input type="email" class="form-control form-control-user" maxlength="100" name="correo" placeholder="Ingrese su Email" value="" required="required">
                            </div><!--//form-group-->
                            <div class="password mb-3">
                                <label class="sr-only" for="signin-password">Password</label>
                                <input type="password" class="form-control form-control-user" maxlength="100" name="clave" placeholder="Ingrese su Contraseña" value="" required="required">
                                <div class="extra mt-3 row justify-content-between">
                                    <div class="col-6">
                                    </div><!--//col-6-->
                                    <div class="col-6">
                                    </div><!--//col-6-->
                                </div><!--//extra-->
                            </div><!--//form-group-->
                            <div class="text-center">
                                <button type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto">Ingresar</button>
                            </div>
                            <div class="form-group">
                                @{if (ViewBag.Error != null)
                                    {
                                        <div class="alert alert-dark" role="banner">
                                            @ViewBag.Error
                                        </div>
                                    }

                                }
                            </div>
                        </form>
                    </div><!--//auth-form-container-->

                </div><!--//auth-body-->

                <footer class="app-auth-footer">
                    <div class="container text-center py-3">
                        <!--/* This template is free as long as you keep the footer attribution link. 
                            If you'd like to use the template without the attribution link, 
                            you can buy the commercial license via our website: 
                            themes.3rdwavemedia.com Thank you for your support. :) */-->

                    </div>
                </footer><!--//app-auth-footer-->
            </div><!--//flex-column-->
        </div><!--//auth-main-col-->
        <div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col">
            <div class="auth-background-holder">
            </div>
            <div class="auth-background-mask">
                <img src="~/Imagenes/background/background-2.jpg"/>
            </div>
            <div class="auth-background-overlay p-3 p-lg-5">
                <div class="d-flex flex-column align-content-end h-100">
                    <div class="h-100"></div>
                    <div class="overlay-content p-3 p-lg-4 rounded">
                        <h5 class="mb-3 overlay-title">Explore los beneficios del Hotel Kristal</h5>
                        <div>
                            Usted será un huésped distinguido por nuestros servicios hoteleros.
                            Su estadía tendra un reconocimiento especial, que incluye tarifas exclusivas y su viaje sera más gratificante con nosotros.
                        </div>
                    </div>
                </div>
            </div><!--//auth-background-overlay-->
        </div><!--//auth-background-col-->

    </div><!--//row-->

    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

